<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:right="0dp">
        <shape android:shape="rectangle" >    <!--left to right-->
            <gradient
                android:angle="0"

                android:startColor="#00000000"        android:endColor="#00000000"
                />
            <corners android:radius="25dp" />

        </shape>
    </item>
    <item
        android:right="0dp"
        android:top="0dp"
        android:left="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <stroke
                android:color="#999999"
                android:width="1dp"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>